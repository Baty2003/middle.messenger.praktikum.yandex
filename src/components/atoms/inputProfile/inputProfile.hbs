<div class="input-profile">
  <label for="" class="input-profile__label">{{label}}</label>
  <span class="input-profile__error">{{errorMessage}}</span>
  <input
    {{#if type}}type={{type}}{{else}}type="text"{{/if}}
    class="input-profile__input"
    placeholder="{{placeholder}}"
    name="{{name}}"
	{{#if (isNotTrue disabled)}}disabled="true"{{/if}}
  />
</div>