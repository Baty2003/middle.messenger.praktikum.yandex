<div class="input-form">
	<label for="" class="input-form__label">{{label}}</label>
	<input {{#if type}}type="{{type}}"{{else}}type="text"{{/if}} class="input-form__input{{#if errorMessage}} input-form__input--error{{/if}}" name="{{name}}">
	<span class="input-form__error">{{errorMessage}}</span>
</div>
